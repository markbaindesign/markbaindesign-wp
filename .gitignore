# =========================
# WordPress 
# =========================

*.log

# Ignore everything in the "public_html" directory except the "wp-content" directory.
public_html/*
!public_html/wp-content/

# Don't ignore favicons, manifest.json
!public_html/*.png
!public_html/*.ico
!public_html/*.svg
!public_html/*.json

# Ignore everything in the "wp-content" directory, except the "plugins"
# and "themes" directories.
public_html/wp-content/*
!public_html/wp-content/plugins/
!public_html/wp-content/themes/
!public_html/wp-content/mu-plugins/

# Ignore everything in the "plugins" directory, except the plugins you
# specify (see the commented-out examples for hints on how to do this.)
public_html/wp-content/plugins/*

# Include all plugins with prefix "kf-"
!public_html/wp-content/plugins/bain-design-*

# Ignore everything in the "mu-plugins" directory, except the mu-plugins you
# specify (see the commented-out examples for hints on how to do this.)
public_html/wp-content/mu-plugins/*
!public_html/wp-content/mu-plugins/bain-design-*.php

# Ignore everything in the "themes" directory, except the themes you
# specify (see the commented-out example for a hint on how to do this.)
public_html/wp-content/themes/*
!public_html/wp-content/themes/bain-design-*/

# Ignore compiled stylesheets if using Sass
public_html/wp-content/themes/bain-design-*/style.css
public_html/wp-content/themes/bain-design-*/editor-style.css
public_html/wp-content/themes/bain-design-*/editor-style-shared.css

# Ignore version stylesheets if using Sass
public_html/wp-content/themes/bain-design-*/style.*.css

# Ignore minified CSS and JS created by build step
public_html/wp-content/themes/bain-design-*/assets/js/dist/custom/*
public_html/wp-content/themes/bain-design-*/assets/css/dist/custom/*
public_html/wp-content/themes/bain-design-*/framework/assets/js/dist/custom/*
public_html/wp-content/themes/bain-design-*/framework/assets/css/dist/custom/*
!public_html/wp-content/themes/bain-design-*/framework/assets/js/dist/custom/.gitkeep
!public_html/wp-content/themes/bain-design-*/assets/css/dist/custom/.gitkeep
!public_html/wp-content/themes/bain-design-*/assets/js/dist/custom/.gitkeep
!public_html/wp-content/themes/bain-design-*/framework/assets/css/dist/custom/.gitkeep

